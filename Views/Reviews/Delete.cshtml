@model TourismWeb.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Delete Review
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this review? This action cannot be undone.
                    </div>

                    <div class="review-details">
                        <h5 class="mb-3">Review Details</h5>
                        
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>@Html.DisplayNameFor(model => model.User):</strong>
                            </div>
                            <div class="col-sm-9">
                                <span class="text-muted">@Html.DisplayFor(model => model.User.FullName)</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>@Html.DisplayNameFor(model => model.Spot):</strong>
                            </div>
                            <div class="col-sm-9">
                                <span class="text-primary">@Html.DisplayFor(model => model.Spot.Name)</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>@Html.DisplayNameFor(model => model.Rating):</strong>
                            </div>
                            <div class="col-sm-9">
                                <div class="rating-stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Model.Rating)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-muted"></i>
                                        }
                                    }
                                    <span class="ms-2 text-muted">(@Html.DisplayFor(model => model.Rating)/5)</span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>@Html.DisplayNameFor(model => model.Comment):</strong>
                            </div>
                            <div class="col-sm-9">
                                <div class="border rounded p-3 bg-light">
                                    @Html.DisplayFor(model => model.Comment)
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>@Html.DisplayNameFor(model => model.ImageUrl):</strong>
                                </div>
                                <div class="col-sm-9">
                                    <div class="review-image">
                                        <img src="@Html.DisplayFor(model => model.ImageUrl)" 
                                             alt="Review Image" 
                                             class="img-thumbnail" 
                                             style="max-width: 200px; max-height: 150px;" />
                                        <div class="mt-2">
                                            <small class="text-muted">@Html.DisplayFor(model => model.ImageUrl)</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>@Html.DisplayNameFor(model => model.CreatedAt):</strong>
                            </div>
                            <div class="col-sm-9">
                                <span class="text-muted">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    @Html.DisplayFor(model => model.CreatedAt)
                                </span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Back to List
                        </a>
                        
                        <form asp-action="Delete" class="d-inline">
                            <input type="hidden" asp-for="ReviewId" />
                            <button type="submit" 
                                    class="btn btn-danger" 
                                    onclick="return confirm('Are you absolutely sure you want to delete this review? This action cannot be undone.')">
                                <i class="fas fa-trash-alt me-2"></i>
                                Delete Review
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .review-details {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid #dee2e6;
    }
    
    .rating-stars {
        display: flex;
        align-items: center;
    }
    
    .rating-stars i {
        font-size: 1.1rem;
        margin-right: 2px;
    }
    
    .review-image img {
        border: 2px solid #dee2e6;
        border-radius: 0.5rem;
    }
    
    .card {
        border: none;
        border-radius: 0.75rem;
    }
    
    .card-header {
        border-radius: 0.75rem 0.75rem 0 0 !important;
        padding: 1.25rem;
    }
    
    .alert-warning {
        border-left: 4px solid #ffc107;
        background-color: #fff3cd;
        border-color: #ffeaa7;
    }
    
    .btn {
        border-radius: 0.5rem;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
    }
    
    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
    }
    
    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
    }
</style>